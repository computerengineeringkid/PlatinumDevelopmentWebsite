{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["sanity"],
    "baseUrl": "."
  },
  "include": ["sanity/**/*.ts", "sanity.config.ts", "sanity.cli.ts"],
  "exclude": ["node_modules"]
}
